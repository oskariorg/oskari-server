<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMapConfig      
PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"      
"http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>

  <settings enhancementEnabled="true" useStatementNamespaces="true"/>

  <typeHandler javaType="org.json.JSONObject" jdbcType="VARCHAR" callback="fi.nls.oskari.domain.utils.JSONTypeHandler"/>
  
  <!-- Use common oskari-map datasource -->
  <transactionManager type="JDBC" commitRequired="true">
    <dataSource type="JNDI">
      <property name="DataSource" value="java:/comp/env/${db.jndi.name}" />
    </dataSource>
  </transactionManager>

  <sqlMap resource="META-INF/InspireTheme.xml" />
  <sqlMap resource="META-INF/MapConfiguration.xml" />
  <sqlMap resource="META-INF/MapConfigurationLayer.xml" />
  <sqlMap resource="META-INF/Users.xml" />
  <sqlMap resource="META-INF/Roles.xml" />
  <sqlMap resource="META-INF/Permissions.xml" />
  <sqlMap resource="META-INF/PublishedMapUsage.xml" />
  <sqlMap resource="META-INF/TermsOfUse.xml" />
  <sqlMap resource="META-INF/CapabilitiesCache.xml" />
  <sqlMap resource="META-INF/View.xml" />
  <sqlMap resource="META-INF/Bundle.xml" />
  <sqlMap resource="META-INF/BackendStatus.xml" />
  <sqlMap resource="META-INF/PublishedMap.xml" />
  <sqlMap resource="META-INF/WFSLayerConfiguration.xml" />
  <sqlMap resource="META-INF/Keyword.xml" />
  <sqlMap resource="META-INF/UserIndicator.xml" />
  <sqlMap resource="META-INF/OskariLayer.xml" />
  <sqlMap resource="META-INF/LayerGroup.xml" />
  <sqlMap resource="META-INF/Visualization.xml" />

</sqlMapConfig>
