    <groupId>fi.nls.oskari</groupId>
    <artifactId>transport</artifactId>
    <packaging>war</packaging>

    <build>
    	<!-- This name is referenced in proxy forwards-->
		<finalName>transport-0.0.1</finalName>
	</build>

	<profiles>
        <profile>
            <id>example</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <defaultGoal>install</defaultGoal>
                <plugins>
                    <plugin>
                        <groupId>org.mortbay.jetty</groupId>
                        <artifactId>jetty-maven-plugin</artifactId>
                        <version>8.1.8.v20121106</version>
                        <configuration>
                            <scanIntervalSeconds>10</scanIntervalSeconds>
                            <webAppConfig>
                                <contextPath>/transport</contextPath>
                            </webAppConfig>
                            <connectors>
                                <connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
                                    <port>2374</port>
                                    <maxIdleTime>60000</maxIdleTime>
                                </connector>
                            </connectors>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

		<profile>
			<id>development</id>
			<build>
	        	<defaultGoal>install</defaultGoal>
	        	<resources>
				  <resource>  
				      <directory>../../servers/development/wfs</directory>
				      <includes>
				          <include>**/*.properties</include>
				          <include>**/*.xml</include>
				      </includes>
				  </resource>
				</resources>
	        	<plugins>
		            <plugin>
		                <groupId>org.mortbay.jetty</groupId>
		                <artifactId>jetty-maven-plugin</artifactId>
		                <version>8.1.8.v20121106</version>
		                <configuration>
		                    <scanIntervalSeconds>10</scanIntervalSeconds>
		                    <webAppConfig>
		                        <contextPath>/transport</contextPath>
		                    </webAppConfig>
                            <connectors>
                                <connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
                                    <port>2374</port>
                                    <maxIdleTime>60000</maxIdleTime>
                                </connector>
                            </connectors>
		                </configuration>
		            </plugin>
		        </plugins>
		    </build>
		</profile>
		
		<profile>
			<id>demo</id>
			<build>
	        	<defaultGoal>install</defaultGoal>
	        	<resources>
				  <resource>  
				      <directory>../../servers/solmudmzke/wfs</directory>
				      <includes>
				          <include>**/*.properties</include>
				          <include>**/*.xml</include>
				      </includes>
				  </resource>
				</resources>
	        	<plugins>
		            <plugin>
		                <groupId>org.mortbay.jetty</groupId>
		                <artifactId>jetty-maven-plugin</artifactId>
		                <version>8.1.8.v20121106</version>
		                <configuration>
		                    <scanIntervalSeconds>10</scanIntervalSeconds>
		                    <webAppConfig>
		                        <contextPath>/transport</contextPath>
		                    </webAppConfig>
		                </configuration>
		            </plugin>
		        </plugins>
		    </build>
		</profile>
		
		<profile>
			<id>production</id>
			<build>
	        	<defaultGoal>install</defaultGoal>
	        	<resources>
				  <resource>  
				      <directory>../../servers/solmudmztu/wfs</directory>
				      <includes>
				          <include>**/*.properties</include>
				          <include>**/*.xml</include>
				      </includes>
				  </resource>
				</resources>
	        	<plugins>
		            <plugin>
		                <groupId>org.mortbay.jetty</groupId>
		                <artifactId>jetty-maven-plugin</artifactId>
		                <version>8.1.8.v20121106</version>
		                <configuration>
		                    <scanIntervalSeconds>10</scanIntervalSeconds>
		                    <webAppConfig>
		                        <contextPath>/transport</contextPath>
		                    </webAppConfig>
		                </configuration>
		            </plugin>
		        </plugins>
		    </build>
		</profile>
	</profiles>
    
